= field_set_tag do
  = f.labeled_input_field :passport_nationality, placeholder: t('activerecord.attributes.person.passport_nationality_info')
  = field_set_tag do
    = f.labeled(:passport_germany) do
      - { true  => 'Ja', false => 'Nein' }.each do |value, label|
        = f.inline_radio_button(:passport_germany, value, label)
  = f.labeled_input_field :languages_spoken, placeholder: t('activerecord.attributes.person.languages_spoken_info')

= field_set_tag do
  = f.labeled_collection_select(:diet, Settings.diets, :first, :last, {}, class: 'span2')
  = f.labeled_input_field :medical_eating_disorders, label: t('people.medical_fields.eating_disorders_long')
= field_set_tag do
  = f.labeled_collection_select(:shirt_size, Settings.shirt_size, :to_s, :to_s, {}, class: 'span2')
  = f.labeled_collection_select(:uniform_size, Settings.uniform_size, :to_s, :to_s, {}, class: 'span2')

= field_set_tag do
  = f.labeled(:can_swim) do
    - { true  => 'Ja', false => 'Nein' }.each do |value, label|
      = f.inline_radio_button(:can_swim, value, label)

- if (@person.status == 'registered')
  = field_set_tag do
    = f.labeled(:foto_permission) do
      - { true  => 'Ja', false => 'Nein' }.each do |value, label|
        = f.inline_radio_button(:foto_permission, value, label)
    .mw-90ch.mb-2
      = raw(t('people.additional_info_fields.foto_permission_help'))
- else
  = render_attrs(entry, :foto_permission)
