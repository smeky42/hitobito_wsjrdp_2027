= f.label(:public, class: 'checkbox col-12 col-sm-2 col-md-12 col-lg-3 col-xl-3 col-xxl-2 mt-sm-2 mt-md-0') do
  - attr_disabled = f.object.respond_to?(:can_edit_attribute?) ? ->(attr) { !f.object.can_edit_attribute?(attr, user: current_user) } : ->(attr) { false }
  = f.check_box(:public, {disabled: attr_disabled.call(:public)})
  %span{'data-bs-toggle': 'tooltip', title: t('.tooltip'), class: ('disabled' if attr_disabled.call(:public))}
    = t(:"activerecord.attributes.social_account.public")
    %i.fas.fa-info.ms-1
