%span.chip.person-tag{data: {tag_id: tag.id, bs_toggle: 'tooltip', bs_html: 'true'}, title: tag.hitobito_tooltip }
  - if can?(:log, person)
    %a{href: tag_search_path(1, tag), target: '_blank', style: 'text-decoration: underline; color: inherit;'}
      = format_tag_name(tag)
  - else
    = format_tag_name(tag)
  - if can?(:manage_tags, person)
    = link_to icon(:times),
              group_person_tags_path(person_id: person.id, name: tag.name),
              data: { tag_id: tag.id, method: :delete },
              remote: true,
              class: 'person-tag-remove'
